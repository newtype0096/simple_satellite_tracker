<UserControl x:Class="satellite_tracker.Views.SatelliteListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:satellite_tracker.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
             xmlns:vm="clr-namespace:satellite_tracker.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:SatelliteListViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             md:DialogServiceViews.IsRegistered="True"
             Background="{StaticResource Third_Background}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="0,0,0,1">
            <Grid Margin="5">
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Center"
                           FontSize="18"
                           Text="Satellite" />

                <Button Width="25"
                        Height="25"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding SettingsCommand}">
                    <Button.Content>
                        <Path Width="25"
                              Height="25"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource CogLine}"
                              Fill="White"
                              StrokeThickness="1" />
                    </Button.Content>
                </Button>
            </Grid>
        </Border>

        <DataGrid Grid.Row="1"
                  ColumnWidth="*"
                  ItemsSource="{Binding SatelliteInfos}"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding CatalogData.OBJECT_NAME}" Header="Name" />
                <DataGridTextColumn Binding="{Binding CatalogData.NORAD_CAT_ID}" Header="NORAD&#x0a;Catalog&#x0a;Number" />
                <DataGridTextColumn Header="Epoch" />
                <DataGridTextColumn Header="Mean&#x0a;Motion" />
                <DataGridTextColumn Header="Eccentricity" />
                <DataGridTextColumn Header="Inclination" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
