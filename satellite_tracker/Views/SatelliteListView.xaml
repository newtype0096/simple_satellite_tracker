<UserControl x:Class="satellite_tracker.Views.SatelliteListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:local="clr-namespace:satellite_tracker.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
             xmlns:vm="clr-namespace:satellite_tracker.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:SatelliteListViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="1680"
             md:DialogServiceViews.IsRegistered="True"
             Background="{StaticResource Sub_Background}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="0,0,0,1">
            <Grid Margin="5">
                <Button Width="25"
                        Height="25"
                        HorizontalAlignment="Left"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Command="{Binding SettingsCommand}">
                    <Button.Content>
                        <Path Width="25"
                              Height="25"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Data="{StaticResource CogLine}"
                              Fill="White" />
                    </Button.Content>
                </Button>
            </Grid>
        </Border>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding SatelliteInfos}"
                  PreviewKeyDown="DataGrid_PreviewKeyDown"
                  SelectedItem="{Binding SelectedInfo, UpdateSourceTrigger=PropertyChanged}"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto"
                                    Binding="{Binding SatCatItem.OBJECT_NAME}"
                                    Header="Name" />
                <DataGridTextColumn Width="100"
                                    Binding="{Binding SatCatItem.NORAD_CAT_ID}"
                                    Header="NORAD&#x0a;Catalog&#x0a;Number" />
                <DataGridTextColumn Width="200"
                                    Binding="{Binding Mean_Motion_Dot}"
                                    Header="Mean Motion Dot" />
                <DataGridTextColumn Width="200"
                                    Binding="{Binding Mean_Motion_Ddot}"
                                    Header="Mean Motion Ddot" />
                <DataGridTextColumn Width="150"
                                    Binding="{Binding BSTAR}"
                                    Header="BSTAR" />
                <DataGridTextColumn Width="150"
                                    Binding="{Binding Ephemeris_Type}"
                                    Header="Ephemeris" />
                <DataGridTextColumn Width="150"
                                    Binding="{Binding Element_Set_No}"
                                    Header="Element Set No" />
                <DataGridTextColumn Width="150"
                                    Binding="{Binding Inclination}"
                                    Header="Inclination" />
                <DataGridTextColumn Width="150"
                                    Binding="{Binding RAAN}"
                                    Header="RAAN" />
                <DataGridTextColumn Width="150"
                                    Binding="{Binding Eccentricity}"
                                    Header="Eccentricity" />
                <DataGridTextColumn Width="150"
                                    Binding="{Binding Mean_Anomaly}"
                                    Header="Mean Anomaly" />
                <DataGridTextColumn Width="150"
                                    Binding="{Binding Mean_Motion}"
                                    Header="Mean Motion" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
