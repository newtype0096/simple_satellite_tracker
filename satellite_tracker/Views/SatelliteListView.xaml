<UserControl x:Class="satellite_tracker.Views.SatelliteListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:satellite_tracker.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="https://github.com/fantasticfiasco/mvvm-dialogs"
             xmlns:vm="clr-namespace:satellite_tracker.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:SatelliteListViewModel}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             md:DialogServiceViews.IsRegistered="True"
             Background="{StaticResource Sub_Background}"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                BorderBrush="{StaticResource Main_Line}"
                BorderThickness="0,0,0,1">
            <Grid Margin="5">
                <Button HorizontalAlignment="Right"
                        Command="{Binding SettingsCommand}"
                        Content="Settings" />
            </Grid>
        </Border>

        <DataGrid Grid.Row="1" />
    </Grid>
</UserControl>
